---
import BaseLayout from '../layouts/BaseLayout.astro';
import PageLink from '../components/react/PageLink/PageLink.tsx';
import {getCollection } from 'astro:content';

const allBlogPosts = await getCollection('blog');
---

<BaseLayout title="Blog">	
	<div>Hi. Below are all the links to blog posts</div>
	
{allBlogPosts.map(blogPost => {
	return <PageLink to={`blog/${blogPost.slug}`} text={blogPost.data.title} />
})}
</>
</BaseLayout>
